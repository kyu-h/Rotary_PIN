<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textSize="50dp"/>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <View
            android:layout_width="320dip"
            android:layout_height="320dip"
            android:layout_centerInParent="true"
            android:background="@drawable/top" />

        <TextView
            android:id="@+id/text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="113dp"
            android:layout_marginTop="185dp"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="35dp"
            android:layout_marginTop="155dp"
            android:text="2"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="95dp"
            android:layout_marginTop="155dp"
            android:text="3"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="150dp"
            android:layout_marginTop="185dp"
            android:text="4"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="180dp"
            android:layout_marginTop="240dp"
            android:text="5"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="180dp"
            android:layout_marginTop="300dp"
            android:text="6"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="150dp"
            android:layout_marginTop="355dp"
            android:text="7"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="95dp"
            android:layout_marginTop="385dp"
            android:text="8"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="35dp"
            android:layout_marginTop="385dp"
            android:text="9"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text01"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="355dp"
            android:text="0"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="320dip"
            android:layout_height="320dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="135dp"
            android:src="@drawable/ic_dial_number"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            app:srcCompat="@color/colorPrimary" />


    </RelativeLayout>

</LinearLayout>